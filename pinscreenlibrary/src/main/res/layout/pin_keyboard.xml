<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button android:id="@+id/pin1"
            style="@style/PinButton"
            android:layout_margin="5dp"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button android:id="@+id/pin2"
            android:layout_margin="5dp"
            style="@style/PinButton"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2" />

        <Button android:id="@+id/pin3"
            android:layout_margin="5dp"
            style="@style/PinButton"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="3" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button android:id="@+id/pin4"
            android:layout_margin="5dp"
            style="@style/PinButton"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="4" />

        <Button android:id="@+id/pin5"
            android:layout_margin="5dp"
            style="@style/PinButton"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="5" />

        <Button android:id="@+id/pin6"
            android:layout_margin="5dp"
            style="@style/PinButton"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="6" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button android:id="@+id/pin7"
            android:layout_margin="5dp"
            style="@style/PinButton"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="7" />

        <Button android:id="@+id/pin8"
            android:layout_margin="5dp"
            style="@style/PinButton"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="8" />

        <Button android:id="@+id/pin9"
            android:layout_margin="5dp"
            style="@style/PinButton"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="9" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="3">
        <Button
            android:id="@+id/pinDot"
            android:layout_margin="5dp"
            style="@style/PinButton"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="." />
        <Button
            android:id="@+id/pin0"
            android:layout_margin="5dp"
            style="@style/PinButton"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0" />
        <Button
            android:id="@+id/pinDelete"
            android:layout_margin="5dp"
            style="@style/PinButton"
            android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Delete" />
    </LinearLayout>
</LinearLayout>