    <style name="PinStatus" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_pin_status_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PinEntry">
        <item name="android:src">@drawable/selector_pin_entry</item>
    </style>
</resources>